<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundIqbal"
    tools:context=".HomePicker">

    <ImageView
        android:id="@+id/bux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/penjelasan"
        android:layout_width="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_below="@id/bux"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure"
            android:textColor="#808080"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/location2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/location"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColorHint="#585858"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_25sdp"
            android:hint="@string/try_riau"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_garisputus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival"
            android:textColor="#808080"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_65sdp"/>

        <EditText
            android:id="@+id/until"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_72sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:hint="@string/try_medan"
            android:textStyle="bold"
            android:textColorHint="#585858" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_88sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/Passangers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passangers"
            android:textColor="#808080"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_130sdp"/>

        <EditText
            android:id="@+id/Passangers1"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:hint="1ppl"
            android:textStyle="bold"
            android:textColor="#9A9A9A"
            android:layout_marginTop="@dimen/_145sdp"
            android:layout_marginLeft="@dimen/_25sdp"/>

        <ImageView
            android:id="@+id/pasangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_passangers"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_160sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#808080"
            android:layout_marginLeft="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_130sdp"/>

        <EditText
            android:id="@+id/SelectDate"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:hint="Sun, 19 July"
            android:textStyle="bold"
            android:textColor="#9A9A9A"
            android:layout_marginLeft="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_146sdp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_160sdp"
            android:layout_marginLeft="@dimen/_150sdp"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/promos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/penjelasan"
        android:src="@drawable/ic_promos"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_35sdp"/>

    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_290sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/kotak1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_rectangle_3" />

            <ImageView
                android:id="@+id/kotak2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_rectangle_3" />

            <ImageView
                android:id="@+id/kotak3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_rectangle_3" />

            <ImageView
                android:id="@+id/kotak4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_rectangle_3" />

            <ImageView
                android:id="@+id/kotak5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_rectangle_3" />

            <ImageView
                android:id="@+id/kotak6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_rectangle_3" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@drawable/ic_ellipse_2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_60sdp"
            android:src="@drawable/ic_rectangle_4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_60sdp"
            android:src="@drawable/ic_notification" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_60sdp"
            android:src="@drawable/ic_profile" />
    </LinearLayout>

</RelativeLayout>