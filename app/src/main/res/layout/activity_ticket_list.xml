<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ticketList">

        <TextView
            android:paddingTop="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/textyour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your Ticket"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_150sdp"></TextView>

        <ImageView
            android:id="@+id/imagejohn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textyour"
            android:layout_centerHorizontal="true"
            android:src="@drawable/illustration_ticketlist"></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagejohn"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_textticketlist"></ImageView>

</RelativeLayout>