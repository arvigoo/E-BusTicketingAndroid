<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundIqbal"
    android:orientation="vertical"
    tools:context=".OrderIssued">

    <ImageView
        android:id="@+id/yourtickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/ic_your_tickets" />

    <androidx.cardview.widget.CardView
        android:id="@+id/penjelasan"
        android:layout_below="@+id/yourtickets"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="#8749F2"
            android:orientation="horizontal"
            android:padding="@dimen/_1sdp">

            <TextView
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="23 Jul 2019. 17:35"
                android:textColor="#FAFAFA"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NoBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_66sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:text="Book No.230719-0001"
                android:textColor="#FAFAFA"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="Sempati Star"
            android:textColor="#673AB7"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:layout_marginLeft="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="p 1923 NM" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:text="02:30"
            android:textColor="#585858"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_70sdp"
            android:textColor="#808080"
            android:layout_marginTop="@dimen/_70sdp"
            android:text="Terminal Amplas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_70sdp"
            android:textColor="#808080"
            android:layout_marginTop="@dimen/_90sdp"
            android:text="@string/medan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_220sdp"
            android:layout_marginTop="@dimen/_68sdp"
            android:text="Issued"
            android:textColor="#61CA5F"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_205sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:src="@drawable/ic_ceklis" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@drawable/ic_search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_60sdp"
            android:src="@drawable/ic_rectangle_6" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_60sdp"
            android:src="@drawable/ic_notification" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_61sdp"
            android:src="@drawable/ic_profile" />
    </LinearLayout>
</RelativeLayout>