<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundIqbal"
    tools:context=".HomeRegistration">

    <ImageView
        android:id="@+id/bux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:src="@drawable/ic_logo_black"
        android:layout_marginTop="@dimen/_15sdp" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:src="@drawable/ic_profile" />

    <ImageView
        android:id="@+id/draft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_toLeftOf="@+id/profile"
        android:src="@drawable/ic_rectangle_4" />

    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gambar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_rectangle_5" />

            <ImageView
                android:id="@+id/gambar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_rectangle_5" />

            <ImageView
                android:id="@+id/gambar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_rectangle_5" />

            <ImageView
                android:id="@+id/gambar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_rectangle_5" />

            <ImageView
                android:id="@+id/gamabr5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_rectangle_5" />

            <ImageView
                android:id="@+id/gambar6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_rectangle_5" />

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/penjelasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_10sdp" >

        <TextView
            android:id="@+id/departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure"
            android:textColor="#808080"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/location"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            android:textColorHint="#585858"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:hint="@string/try_riau"/>

        <ImageView
            android:id="@+id/location2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_33sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_garisputus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_48sdp"
            android:layout_marginLeft="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival"
            android:textColor="#808080"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_65sdp"/>

        <EditText
            android:id="@+id/until"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:hint="@string/try_medan"
            android:textColorHint="#585858"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_85sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/Passangers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passangers"
            android:textColor="#808080"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_140sdp"/>

        <EditText
            android:id="@+id/Passangers1"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:hint="1ppl"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_155sdp"/>

        <ImageView
            android:id="@+id/pasangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_passangers"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_168sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#808080"
            android:layout_marginLeft="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_140sdp"/>

        <EditText
            android:id="@+id/SelectDate"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:hint="Select date"
            android:textColor="#585858"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_155sdp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_168sdp"
            android:layout_marginLeft="@dimen/_140sdp"/>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_search"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/penjelasan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:backgroundTint="#673AB7"
        android:text="search now"
        android:textColor="@color/white" />

</RelativeLayout>