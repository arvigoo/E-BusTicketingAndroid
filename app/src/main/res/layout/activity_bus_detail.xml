<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundIqbal"
    tools:context=".BusDetail">

    <ImageView
        android:id="@+id/bookTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_book_a_trip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp" />

    <ImageView
        android:id="@+id/panah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/ic_vector" />

    <ImageView
        android:id="@+id/bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookTrip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@drawable/picturebus" />

    <androidx.cardview.widget.CardView
        android:id="@+id/busCard"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_190sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/txtnamabis"
            android:textColor="@color/namabis"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_95sdp"
            android:src="@drawable/ic_starbus" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_110sdp"
            android:textColor="@color/namabis"
            android:text="@string/_9_10" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_190sdp"
        android:layout_toRightOf="@+id/busCard"
        android:backgroundTint="#673AB7"
        app:cardCornerRadius="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/see_picture"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:layout_below="@+id/busCard"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/friday_23_jul_2019" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fridayCard"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_115sdp"
        android:layout_below="@+id/friday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#8749F2"
            android:text="@string/medanCaps"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:text="17:35"
            android:textColor="#585858"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:textColor="#9A9A9A"
            android:text="Date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_75sdp"
            android:textColor="#808080"
            android:text="23 July 2019" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/pekanbaruCaps"
            android:textColor="#8749F2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="09:10"
            android:textColor="#585858"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="#9A9A9A"
            android:text="Bus No." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#808080"
            android:layout_marginTop="@dimen/_75sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="p 1208 NN" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/ic_garis_jarak" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_22sdp"
            android:text="13h45m"
            android:textColor="#585858"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_toRightOf="@id/friday"
        app:cardCornerRadius="@dimen/_10sdp"
        android:backgroundTint="#FFD03D"
        android:layout_marginTop="@dimen/_250sdp"
        android:layout_marginLeft="@dimen/_145sdp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus"
            android:textColor="#8C6F12"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1d"
            android:textColor="#8C6F12"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/availableSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fridayCard"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Avaible seat"
        android:textColor="#585858"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/perkalian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 x 166.000,00"
        android:textColor="#808080"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_40sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 332.333,00"
        android:textStyle="bold"
        android:textColor="#8749F2"
        android:textSize="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:backgroundTint="#673AB7"
        android:text="Book Now"
        android:textColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:layout_height="@dimen/_80sdp"
        android:layout_below="@+id/availableSeat"
        android:layout_marginTop="@dimen/_2sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="24 Seat are available" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#808080"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:text="2 x 2 Seats arrangement" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_35sdp"
            android:text="Class"
            android:textColor="#585858"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>